using BllLibrary;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _28September
{
    public class Program
    {
        static void Main(string[] args)
        {
            Bookoperation bk = new Bookoperation();
            List<bookbal> bookbals = bk.getbooks();
            foreach(var boo in bookbals)
            {
                Console.WriteLine(boo.book_no);
                Console.WriteLine(boo.Book_name);

                Console.WriteLine(boo.Author);
                Console.WriteLine(boo.Cost);
                Console.WriteLine(boo.Category);

                Console.WriteLine("====");
                
            }
            Console.ReadLine();
        }
    }
}
