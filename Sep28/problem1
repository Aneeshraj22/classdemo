using DalLiibrary;
using System;
using System.Collections.Generic;
using System.Diagnostics.SymbolStore;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using BllLibrary;



namespace BllLibrary
{
    public class Bookoperation
    {
        public void insertbook(bookbal bk)
        {
            LibrarySystemEntities context= new LibrarySystemEntities();
            
            Book b = new Book();
            b.book_no = bk.book_no;
            b.Book_name = bk.Book_name;
            b.Author=bk.Author;
            b.Cost=bk.Cost;
            b.Category=bk.Category;
            context.Books.Add(b);
            context.SaveChanges();

            
        }

        public void insertbook()
        {

        }





        public List<bookbal> getbooks()
        {

            LibrarySystemEntities context = new LibrarySystemEntities();
            List<Book> bo = context.Books.ToList();
            List<bookbal> bookbals = new List<bookbal>();

            foreach (var b in bo)
            {
                bookbals.Add(new bookbal { book_no = b.book_no, Book_name = b.Book_name, Author = b.Author, Cost = b.Cost, Category = b.Category });

            }
            return bookbals;
        }
      
        
    }
}
